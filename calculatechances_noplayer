    if (hand_pl1 == max(z)):
        return 1
    else:
        return 0
t, times = 0, 10000
v = 0
while t < times:
    t = t+1
    drawn_cards = draw_cards(3, 1)
    cards_in_play = drawn_cards[0:7]
    hand_pl1 = samecards(cards_in_play)
    p = didIwin(drawn_cards, hand_pl1)
    v = v+p
print (v*100/times),'%'
